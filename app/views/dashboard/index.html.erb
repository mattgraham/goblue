<div class="w-full p-8">
  <div class="flex flex-col md:flex-row items-center gap-2">
    <%= image_tag team(130)[:logo], class: "h-24 w-24" %>
    <div class="text-xl md:text-4xl uppercase tracking-wide flex items-center gap-1">
      <% if @fetch_rankings && @fetch_rankings['130'] %>
        <span class="text-gray-500 text-base ml-2">#<%= @fetch_rankings['130'][:current] %></span>
      <% end %>
      <div class="font-bold">Michigan</div><div class="">Wolverines</div>
    </div>
  </div>
  
  <!-- Team Record and Standing Summary -->
  <% if @team_records && @team_records['130'] %>
    <div class="mt-6 p-4 bg-blue-50 rounded-lg border border-blue-200">
      <div class="flex items-center justify-between">
        <div class="flex items-center gap-6">
          <div class="text-center">
            <div class="text-sm text-gray-600 uppercase tracking-wide">Overall Record</div>
            <div class="text-2xl font-bold text-blue-900"><%= @team_records['130'][:summary] %></div>
          </div>
          
          <% if @team_records['130'][:conference] != "N/A" %>
            <div class="text-center">
              <div class="text-sm text-gray-600 uppercase tracking-wide">Conference</div>
              <div class="text-xl font-bold text-blue-900"><%= @team_records['130'][:conference] %> <div class="text-xs text-gray-500">(<%= @team_records['130'][:record_stats]['divisionWins'].to_i %>-<%= @team_records['130'][:record_stats]['divisionLosses'].to_i %>)</div></div>
            </div>
          <% end %>
        </div>
        
        <div class="text-right">
          <div class="text-sm text-gray-600 uppercase tracking-wide">Conference Standing</div>
          <div class="text-lg font-bold text-blue-900"><%= @team_records['130'][:standing_summary] %></div>
          <div class="text-xs text-gray-500">(<%= @team_records['130'][:record_stats]['divisionWins'].to_i %>-<%= @team_records['130'][:record_stats]['divisionLosses'].to_i %>)</div>
        </div>
      </div>
      
      <!-- Detailed Record Stats -->
      <% if @team_records['130'][:record_stats].any? %>
        <div class="mt-4 pt-4 border-t border-blue-200">
          <div class="text-sm text-gray-600 uppercase tracking-wide mb-2">Season Statistics</div>
          <div class="grid grid-cols-2 md:grid-cols-4 gap-4 text-xs">
            <% stats = @team_records['130'][:record_stats] %>
            <% if stats['pointsFor'] %>
              <div class="text-center">
                <div class="text-gray-500">Points For</div>
                <div class="font-semibold"><%= stats['pointsFor'] %></div>
              </div>
            <% end %>
            <% if stats['pointsAgainst'] %>
              <div class="text-center">
                <div class="text-gray-500">Points Against</div>
                <div class="font-semibold"><%= stats['pointsAgainst'] %></div>
              </div>
            <% end %>
            <% if stats['avgPointsFor'] %>
              <div class="text-center">
                <div class="text-gray-500">Avg Points For</div>
                <div class="font-semibold"><%= stats['avgPointsFor'] %></div>
              </div>
            <% end %>
            <% if stats['avgPointsAgainst'] %>
              <div class="text-center">
                <div class="text-gray-500">Avg Points Against</div>
                <div class="font-semibold"><%= stats['avgPointsAgainst'] %></div>
              </div>
            <% end %>
            <% if stats['winPercent'] %>
              <div class="text-center">
                <div class="text-gray-500">Win %</div>
                <div class="font-semibold"><%= (stats['winPercent'] * 100).round(1) %>%</div>
              </div>
            <% end %>
            <% if stats['gamesPlayed'] %>
              <div class="text-center">
                <div class="text-gray-500">Games Played</div>
                <div class="font-semibold"><%= stats['gamesPlayed'] %></div>
              </div>
            <% end %>
          </div>
        </div>
      <% end %>
    </div>
  <% end %>
  
</div>

<div data-controller="game-filter" class="w-full max-w-screen-2xl mx-auto my-12 grid grid-cols-1 md:grid-cols-2 gap-6">
  <div class="border border-gray-200 rounded-lg">
    <div class="pl-4 text-lg p-2 border-b border-gray-200">2025 Schedule</div>
    <div class="pl-4 text-[10px] uppercase p-2 bg-gray-50 border-b border-gray-200">Regular Season</div>
    <div class="text-sm">
      <% if @games&.any? %>
        <% @games.each do |game| %>
          <div class="flex items-center p-3 border-b border-gray-200 gap-2 <%= game['homeId'] == '130' ? 'bg-blue-950 text-white' : '' %>"> 
            <div class="text-blue-500 font-semibold text-lg">
              <% if game['homeId'] == '130' %>
                vs.
              <% else %>
                @
              <% end %>
            </div>
            <div class="font-medium flex items-center gap-2 mr-2">
              <% if game['homeId'] == '130' %>
                <%= image_tag team(game["awayId"])[:logo], class: "h-6 w-6" %>
                <div>
                  <% if @fetch_rankings && @fetch_rankings[game['awayId']] %>
                    <span class="<%= game['homeId'] == '130' ? 'text-white/50' : 'text-gray-400' %> text-xs"><%= @fetch_rankings[game['awayId']][:current] %></span>
                  <% end %>
                  <%= team(game['awayId'])[:name] %>
                </div>
              <% else %>
                <%= image_tag team(game["homeId"])[:logo], class: "h-6 w-6" %>
                <div>
                  <% if @fetch_rankings && @fetch_rankings[game['homeId']] %>
                    <span class="text-gray-400 text-xs"><%= @fetch_rankings[game['homeId']][:current] %></span>
                  <% end %>
                  <%= team(game['homeId'])[:name] %>
                </div>
              <% end %>
            </div>
            <div class="flex flex-col text-xs <%= game['homeId'] == '130' ? 'text-white' : 'text-gray-600' %> ml-auto text-right">
              <div class="font-semibold">
                <%= game['startDate'].strftime("%b %d") %>
              </div>
              <div>
                <% if game['startTimeTBD'].to_s == 'true' || game['startDate'].strftime("%I:%M %p") == "12:00 AM" %>
                  <span class="<%= game['homeId'] == '130' ? 'text-white/50' : 'text-gray-400' %>">TBD</span>
                <% else %>
                  <%= game['startDate'].strftime("%I:%M %p") %>
                <% end %>
              </div>
              <div class="<%= game['homeId'] == '130' ? 'text-white' : 'text-gray-500' %>">
                  <% if game['broadcast'] %>
                    <%= game['broadcast']['media'] %>
                  <% end %>
              </div>
            </div>
          </div>
          
        <% end %>
      <% else %>
        <div class="text-center py-8">
          <div class="inline-block animate-spin rounded-full h-8 w-8 border-b-2 border-blue-500"></div>
          <p class="mt-2 text-gray-600">Loading schedule...</p>
        </div>
      <% end %>
    </div>
  </div>

  <div class="border border-gray-200 rounded-lg">
    <div class="pl-4 text-lg p-2 border-b border-gray-200">AP Top 25 Rankings</div>
    <div class="pl-4 text-[10px] uppercase p-2 bg-gray-50 border-b border-gray-200">Current Week</div>
    <div class="text-sm">
      <% if @fetch_rankings && @fetch_rankings.any? %>
        <% @fetch_rankings.sort_by { |team_id, rank_data| rank_data[:current] }.each do |team_id, rank_data| %>
          <div class="flex items-center p-3 border-b border-gray-200 gap-2">
            <div class="text-blue-600 font-semibold">
              #<%= rank_data[:current] %>
            </div>
            <div class="font-medium flex items-center gap-2">
              <%= image_tag team(team_id)[:logo], class: "h-6 w-6" %>
              <%= team(team_id)[:name] %>
            </div>
            <div class="flex flex-col text-xs text-gray-600 ml-auto text-right">
              <% if rank_data[:previous] && rank_data[:previous] != 0 %>
                <div class="font-semibold">
                  #<%= rank_data[:previous] %>
                </div>
                <div class="text-gray-500">
                  Previous
                </div>
              <% else %>
                <div class="font-semibold">
                  NR
                </div>
                <div class="text-gray-500">
                  Previous
                </div>
              <% end %>
            </div>
          </div>
        <% end %>
      <% else %>
        <div class="text-center py-8">
          <div class="inline-block animate-spin rounded-full h-8 w-8 border-b-2 border-blue-500"></div>
          <p class="mt-2 text-gray-600">Loading rankings...</p>
        </div>
      <% end %>
    </div>
  </div>
</div>

<!-- This Week's Scoreboard Section -->
<div class="w-full max-w-screen-2xl mx-auto my-12">
  <div class="border border-gray-200 rounded-lg">
    <div class="pl-4 text-sm sm:text-lg p-2 border-b border-gray-200">This Week's Scoreboard</div>
    <div class="pl-4 text-[8px] sm:text-[10px] uppercase p-2 bg-gray-50 border-b border-gray-200">Ranked Teams Only</div>
    <div class="text-sm">
      <% if @scoreboard&.any? %>
        <% ranked_games = @scoreboard %>
        
        <% if ranked_games.any? %>
          <% ranked_games.each do |game| %>
            <div class="flex items-center p-3 border-b border-gray-200 gap-4">
              <!-- Away Team (Left) -->
              <div class="font-medium flex flex-col sm:flex-row items-center gap-1 sm:gap-2 flex-1 justify-start">
                <% if team(game["awayId"])[:logo] %>
                  <%= image_tag team(game["awayId"])[:logo], class: "h-5 w-5 sm:h-6 sm:w-6" %>
                <% end %>
                <div class="flex flex-col sm:flex-row items-center gap-1">
                  <% away_competitor = game['competitors']&.find { |c| c['homeAway'] == 'away' } %>
                  <% if away_competitor && away_competitor['curatedRank'] && away_competitor['curatedRank']['current'] && away_competitor['curatedRank']['current'] != 99 %>
                    <span class="text-gray-400 text-xs">#<%= away_competitor['curatedRank']['current'] %></span>
                  <% end %>
                  <span class="text-sm sm:text-base text-center"><%= team(game['awayId'])[:name] %></span>
                </div>
              </div>
              
              <!-- Center: Score and Game Info -->
              <div class="flex flex-col items-center text-center flex-1">
                <!-- Score -->
                <div class="text-blue-600 font-semibold text-base sm:text-lg mb-1">
                  <% if game['status'] && game['scores'] %>
                    <% home_score = game['scores'][game['homeId']]&.dig('score') %>
                    <% away_score = game['scores'][game['awayId']]&.dig('score') %>
                    <% status_type = game['status']['type'] %>
                    
                    <% if home_score && away_score && (status_type == 'STATUS_IN_PROGRESS' || status_type == 'STATUS_FINAL') %>
                      <% home_score_int = home_score.to_i %>
                      <% away_score_int = away_score.to_i %>
                      <% home_winning = home_score_int > away_score_int %>
                      <% away_winning = away_score_int > home_score_int %>
                      <% game_final = status_type == 'STATUS_FINAL' %>
                      
                      <div class="text-center flex items-center gap-1">
                        <div class="text-xs sm:text-sm font-bold <%= 'text-green-600' if game_final && away_winning %>"><%= away_score %></div>
                        <div class="text-xs text-gray-500">-</div>
                        <div class="text-xs sm:text-sm font-bold <%= 'text-green-600' if game_final && home_winning %>"><%= home_score %></div>
                      </div>
                    <% else %>
                      <span class="text-sm sm:text-base">VS</span>
                    <% end %>
                  <% else %>
                    <span class="text-sm sm:text-base">VS</span>
                  <% end %>
                </div>
                
                <!-- Game Status/Time -->
                <div class="text-xs text-gray-600">
                  <% if game['status'] %>
                    <% status_type = game['status']['type'] %>
                    <% if status_type == 'STATUS_SCHEDULED' %>
                      <!-- Scheduled Game -->
                      <% if game['startDate'] %>
                        <div class="font-semibold text-xs sm:text-sm">
                          <%= game['startDate'].strftime("%b %d") %>
                          <% if game['startTimeTBD'].to_s == 'true' || game['startDate'].strftime("%I:%M %p") == "12:00 AM" %>
                            <span class="text-gray-400"> TBD</span>
                          <% else %>
                            <span class="text-gray-500"> <%= game['startDate'].strftime("%l:%M %p") %></span>
                          <% end %>
                        </div>
                      <% else %>
                        <div class="font-semibold text-xs sm:text-sm"><span class="text-gray-400">TBD</span></div>
                      <% end %>
                    <% elsif status_type == 'STATUS_IN_PROGRESS' %>
                      <!-- Live Game -->
                      <div class="font-semibold text-green-600 text-xs sm:text-sm">LIVE</div>
                      <div class="text-green-600 text-xs sm:text-sm">
                        <% if game['status']['displayClock'] %>
                          <%= game['status']['displayClock'] %>
                        <% elsif game['status']['period'] %>
                          Q<%= game['status']['period'] %>
                        <% else %>
                          LIVE
                        <% end %>
                      </div>
                    <% elsif status_type == 'STATUS_FINAL' %>
                      <!-- Final Game -->
                      <div class="text-gray-500 text-xs sm:text-sm">
                        <%= game['status']['detail']&.split(' - ')&.last || 'Final' %>
                      </div>
                    <% else %>
                      <!-- Other Status -->
                      <div class="font-semibold text-xs sm:text-sm">
                        <%= game['status']['description'] || 'TBD' %>
                      </div>
                      <div class="text-gray-500 text-xs sm:text-sm">
                        <%= game['status']['detail'] || '' %>
                      </div>
                    <% end %>
                  <% else %>
                    <!-- No Status - Show Scheduled Time -->
                    <% if game['startDate'] %>
                      <div class="font-semibold text-xs sm:text-sm">
                        <%= game['startDate'].strftime("%b %d") %>
                        <% if game['startTimeTBD'].to_s == 'true' || game['startDate'].strftime("%I:%M %p") == "12:00 AM" %>
                          <span class="text-gray-400"> TBD</span>
                        <% else %>
                          <span class="text-gray-500"> <%= game['startDate'].strftime("%I:%M %p") %></span>
                        <% end %>
                      </div>
                    <% else %>
                      <div class="font-semibold text-xs sm:text-sm"><span class="text-gray-400">TBD</span></div>
                    <% end %>
                  <% end %>
                </div>
                
                <!-- Broadcast Info -->
                <% if game['broadcast'] %>
                  <div class="text-gray-500 text-xs mt-1">
                    <%= game['broadcast']['media'] %>
                  </div>
                <% end %>
              </div>
              
              <!-- Home Team (Right) -->
              <div class="font-medium flex flex-col sm:flex-row items-center gap-1 sm:gap-2 flex-1 justify-end">
                <div class="flex flex-col sm:flex-row items-center gap-1 order-2 sm:order-1">
                  <% home_competitor = game['competitors']&.find { |c| c['homeAway'] == 'home' } %>
                  <% if home_competitor && home_competitor['curatedRank'] && home_competitor['curatedRank']['current'] && home_competitor['curatedRank']['current'] != 99 %>
                    <span class="text-gray-400 text-xs">#<%= home_competitor['curatedRank']['current'] %></span>
                  <% end %>
                  <span class="text-sm sm:text-base text-center"><%= team(game['homeId'])[:name] %></span>
                </div>
                <% if team(game["homeId"])[:logo] %>
                  <%= image_tag team(game["homeId"])[:logo], class: "h-5 w-5 sm:h-6 sm:w-6 order-1 sm:order-2" %>
                <% end %>
              </div>
            </div>
          <% end %>
        <% else %>
          <div class="text-center py-8">
            <p class="text-gray-600">No ranked team games this week</p>
          </div>
        <% end %>
      <% else %>
        <div class="text-center py-8">
          <div class="inline-block animate-spin rounded-full h-8 w-8 border-b-2 border-blue-500"></div>
          <p class="mt-2 text-gray-600">Loading scoreboard...</p>
        </div>
      <% end %>
    </div>
  </div>
</div>
